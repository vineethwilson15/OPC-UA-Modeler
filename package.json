{
  "name": "@IndustrialSoftwares/opc-ua-modeler",
  "version": "0.2.1",
  "description": "Web-based OPC UA Information Model Viewer with hierarchical navigation, advanced filtering, theme support, and comprehensive nodeset analysis",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IndustrialSoftwares/OPC-UA-Modeler.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "opc-ua-modeler": "./bin/opc-ua-modeler.mjs"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@siemens/ix": "~4.2.0",
    "@siemens/ix-icons": "^3.3.0",
    "@siemens/ix-react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vis-network": "^10.0.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^4.0.17"
  }
}